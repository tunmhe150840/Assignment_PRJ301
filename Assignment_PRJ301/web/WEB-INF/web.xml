<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <servlet>
        <servlet-name>StudentTimetableController</servlet-name>
        <servlet-class>controller.student.TimetableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentTimetableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>StudentViewAttendantController</servlet-name>
        <servlet-class>controller.student.ViewAttendantController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentViewAttendantController</servlet-name>
        <url-pattern>/student/viewAttendant</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>InstructorTimetableController</servlet-name>
        <servlet-class>controller.instructor.TimetableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InstructorTimetableController</servlet-name>
        <url-pattern>/instructor/timetable</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TakeAttController</servlet-name>
        <servlet-class>controller.instructor.TakeAttController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TakeAttController</servlet-name>
        <url-pattern>/instructor/takeAtt</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>InstructorHomeController</servlet-name>
        <servlet-class>controller.instructor.HomeController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>InstructorHomeController</servlet-name>
        <url-pattern>/instructor/home</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>StudentHomeController</servlet-name>
        <servlet-class>controller.student.HomeController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>StudentHomeController</servlet-name>
        <url-pattern>/student/home</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
